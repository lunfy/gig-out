<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>

    <header>
        <%- include('../partials/header') %> 
    </header>

    <main>
      <div id="art">
        <article class="main-art">
          <h1 class="title is-underlined latest">Latest Updates</h1>
          <% if (postings) { %>
            <% for (let i=0; i<postings.length; i++) { %>
              <section class="section posting mb-5">
                <h2 class="title"><a href='/gigs/<%= postings[i]._id %>'> <%= postings[i].title %> </a></h2>
                <p class="subtitle"><strong>Poster:</strong> <%= postings[i].authorFname %> <%= postings[i].authorLname %> </p>
                <p><strong>Gig Type:</strong> <%= postings[i].type %></p>
                <p><strong>Amount:</strong> $<%= postings[i].amount %></p>
                <br>
                <p class="p-date"><strong>Last Updated:</strong> <%= postings[i].lastUpdated %></p>
              </section>
            <% } %>
          <% } %>
        </article>
      </div>
        
    </main>

  <footer>
    <%- include('../partials/footer') %>
  </footer>

  <!-- possible some script partials here -->
  <script> <%- include('../../public/scripts/navbar.js') %> </script>

  </body>
</html>