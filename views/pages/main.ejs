<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>

    <header>
        <%- include('../partials/header') %> 
    </header>

    <main>

       <article class="mt-4">
        <% if (postings) { %>
          <% for (let i=0; i<postings.length; i++) { %>
            <section class="section posting mb-5">
              <h2 class="title"><a href='/gigs/<%= postings[i]._id %>'> <%= postings[i].title %> </a></h2>
              <p>Poster: <%= postings[i].authorFname %> <%= postings[i].authorLname %> </p>
              <br>
              <p><%= postings[i].messageBody %></p>
              <br>
              <p class="p-date"><%= postings[i].datePosted %></p>
            </section>
         <% } %>
        <% } %>
       </article>

       <aside>...</aside>
        
    </main>

  <footer>
    <%- include('../partials/footer') %>
  </footer>

  <!-- possible some script partials here -->
  <script> <%- include('../../public/scripts/navbar.js') %> </script>

  </body>
</html>